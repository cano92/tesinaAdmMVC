{% extends 'base.html.twig' %}

{% block title %}Tesina Form {% endblock %}


{% block body %} 

        <p class="text-primary">{{info}}</p>
        <p class="text-danger">{{error}}</p>
    <div class="form-group">
        <form action="./?action=editForm1" method="POST">
            <input type="hidden" name="idForm1" value="{{idForm1}}">
            <input   class="btn btn-secondary" type="submit" value="Editar Form1">
        </form>
    </div> 
    
    <h2>Formulario Tesina</h2>
    <form action="?action=registerTesina" method="post">
        <div class="form-group">
            <label for="formGroupExampleInput">Titulo</label>
            <input type="text" required name="titulo" value="{{titulo}}" class="form-control" id="formGroupExampleInput" placeholder="titulo tesina">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">objetivo</label>
            <input type="text" required name="objetivo" value="{{objetivo}}" class="form-control" id="formGroupExampleInput" placeholder="objetivo">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput">motivacion</label>
            <input type="text" required name="motivacion" value="{{motivacion}}" class="form-control" id="formGroupExampleInput" placeholder="motivacion">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">desarrollo propuestos</label>
            <input type="text" required name="desarrolloPropuestos" value="{{desarrolloPropuestos}}" class="form-control" id="formGroupExampleInput2" placeholder="desarrollo propuestos">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">resultados esperados</label>
            <input type="text" required name="resultadosEsperados" value="{{resultadosEsperados}}" class="form-control" id="formGroupExampleInput2" placeholder="resultadosEsperados">
        </div>
        
        <div class="form-group"></div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>

{% endblock %}