{% extends 'base.html.twig' %}

{% block title %}Reportes Estado {% endblock %}


{% block body %} 
<div class="row">
    <h4>Reportes Estado</h4>
</div>

<div class="row justify-content-center">

    <div class="col-sm-12" id="graphicHC" >
    
    </div>
</div>


<script type='text/javascript'>

Highcharts.chart('graphicHC', {
    chart: {
        plotBackgroundColor: null,
        plotBorderWidth: null,
        plotShadow: false,
        type: 'pie'
    },
    title: {
        text: 'Reporte Estados '
    },
    tooltip: {
        pointFormat: '{series.name}: <b>{point.percentage:.1f}%</b>'
    },
    plotOptions: {
        pie: {
            allowPointSelect: true,
            cursor: 'pointer',
            dataLabels: {
                enabled: true,
                format: '<b>{point.name}</b>: {point.percentage:.1f} %'
            }
        }
    },
    series: [{
        name: 'Brands',
        colorByPoint: true,
        data: [{
            name: 'propuesta Incial',
            y: {{result.propuestaIncial}}
           
        }, {
            name: 'tesina Inicial',
            y: {{result.tesinaInicial}}
        }, {
            name: 'infAvance Entregado',
            y: {{result.infAvanceEntregado}}
        }, {
            name: 'para Exponer',
            y: {{result.paraExponer}}
        }, {
            name: 'tesina Finalizada',
            y: {{result.tesinaFinalizada}}
        }, {
            name: 'tesina Cancelada',
            y: {{result.tesinaCancelada}}
        }
        ]
    }]
});


</script>



{% endblock %}