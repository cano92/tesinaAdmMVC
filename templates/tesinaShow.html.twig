{% extends 'base.html.twig' %}

{% block title %}Tesina Form {% endblock %}


{% block body %} 

        <p class="text-primary">{{info}}</p>
        <p class="text-danger">{{error}}</p>
   
     
    <div class="row justify-content-md-center">
    <div class="col-sm-10">

    <!-- si la tesina esta aprobada mostrar cometario -->
{% if  tesis.estado == 'tesina cancelada' %}
    <div class="form-group" >
        <h6 class="text-danger" >Tesina cancelada</h6>
        <div class="alert alert-danger" role="alert"> <p>{{ tesis.descripcion_cancelacion }}</p> </div>
        
        
    </div>
{% endif %}
{% if  tesis.estado == 'tesina finalizada' %}
    <div class="form-group" >
        <h6 class="text-success" >Tesina Finalizada</h6>
        <div class="alert alert-success" role="alert"> <p>Nota: {{ tesis.	nota }}</p> </div>
        
        
    </div>
{% else %}
    {% if  tesis.revision == 'aceptada' %}
        <div class="form-group">
            <h6 class="text-success" >{{tesis.estado}}</h6>
            {% if tesis.estado == 'para exponer' %}
                <div class="alert alert-success" role="alert"> fecha: {{tesis.fecha_exposicion}} </div>
            {% else %}
                
                <div class="alert alert-success" role="alert"> {{tesis.comentario}} </div>
            {% endif %}
        </div>
    {% endif %}
    {% if  tesis.revision == 'rechazada' %}
        <div class="form-group">
            <h6 class="text-danger" >{{tesis.estado}}</h6>
            <div class="alert alert-danger" role="alert"> {{tesis.comentario}} </div>
        </div>
    {% endif %}
    {% if  tesis.revision == 'en espera' %}
        <div class="form-group">
            <h6 class="text-info" >Tesina Enviada</h6>
            <div class="alert alert-info" role="alert"> Tesina esta en espera de calificacion </div>
        </div>
    {% endif %}
{% endif %}
        <!-- Button trigger modal -->
        <button type="button" class="btn btn-light" data-toggle="modal" data-target="#exampleModalScrollable">
            ver Form1
        </button>

        <!-- Modal -->
        <div class="modal fade" id="exampleModalScrollable" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalScrollableTitle">Formulario 1</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <h6>Director</h6>
                    <div class="p-3 mb-2 bg-light text-dark" role="alert"> {{ director['lastname'] }} {{ director['firstname'] }} </div>
                </div>
                <div class="form-group">
                    <h6>codirector</h6>
                    <div class="p-3 mb-2 bg-light text-dark" role="alert"> {{ codirector['lastname'] }} {{ director['firstname'] }} </div>
                </div>
                <div class="form-group">
                    <h6>asesor profesional</h6>
                    <div class="p-3 mb-2 bg-light text-dark" role="alert"> {{form1.asesor_profesional}} </div>
                </div>
                <div class="form-group">
                    <h6>alumno 1</h6>
                    <div class="p-3 mb-2 bg-light text-dark" role="alert"> {{ alumno1.username }} </div>
                </div>
                <div class="form-group">
                    <h6>alumno 2</h6>
                    <div class="p-3 mb-2 bg-light text-dark" role="alert"> {{ alumno2.username }} </div>
                </div>
                <div class="form-group">
                    <h6>clasificacion</h6>
                    <div class="p-3 mb-2 bg-light text-dark" role="alert"> {{form1.clasificacion}} </div>
                </div>
                <div class="form-group">
                    <h6>plazo de ejecucion</h6>
                    <div class="p-3 mb-2 bg-light text-dark" role="alert"> {{form1.plazo_de_ejecucion}} </div>
                </div>
            </div>
            </div>
        </div>
        </div>


       <h2>Tesina</h2>
        <div class="form-group">
            <h5>Titulo</h5>
            <div class="p-3 mb-2 bg-light text-dark" role="alert"> {{tesis.titulo}} </div>
        </div>
        <div class="form-group">
            <h5>objetivo</h5>
            <div class="p-3 mb-2 bg-light text-dark" role="alert"> {{tesis.objetivo}} </div>
        </div>
        <div class="form-group">
            <h5>motivacion</h5>
            <div class="p-3 mb-2 bg-light text-dark" role="alert"> {{tesis.motivacion}} </div>
        </div>
        <div class="form-group">
            <h5>desarrollo propuestos</h5>
            <div class="p-3 mb-2 bg-light text-dark" role="alert"> {{tesis.desarrollos_propuestos}} </div>
        </div>
        <div class="form-group">
            <h5>resultados esperados</h5>
            <div class="p-3 mb-2 bg-light text-dark" role="alert"> {{tesis.resultados_esperados}} </div>
        </div>
    </div>
    </div>
{% endblock %}
